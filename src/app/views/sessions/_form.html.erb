<%= form_for :session, url: session_path do |form| %>
  <div class="form-group row">
    <%= form.label :email, class:"col-sm-1" %>
    <%= form.text_field :email, type: 'email', class:"col-sm-2", placeholder:"Email address ..." %>
  </div>

  <div class="form-group row">
    <%= form.label :password, class:"col-sm-1" %>
    <%= form.password_field :password, class:"col-sm-2", placeholder:"Password ..." %>
    <%= link_to t(".forgot_password"), new_password_path, class:"col-sm-2" %>
  </div>

  <div class="form-group row">
    <%= form.label "", class:"col-sm-1" %>
    <%= form.submit "Singin",  class:"btn btn-primary col-sm-1" %>
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class:"col-sm-1" %>
    <% end %>
  </div>
<% end %>

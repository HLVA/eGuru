<p id="notice"><%= notice %></p>

<% @questions.each do |question| %>
  <div class="card">
    <div class="card-block">
      <a>Question:</a> 
      <%= link_to question.title, question_path(question.id), class: 'card-title' %>
    </div>
    <div class="card-block">
      <p class="card-text">Content: <%= question.content %></p>
      <p class="card-text">Rating:<%= question.rating %></p>
      <p class="card-text">Number of answer:<%= question.answers.size %></p>
      <a class="card-link"><%= link_to 'Show', question %></a>
      <a class="card-link"><%= link_to 'Edit', edit_question_path(question)%></a>
      <a class="card-link"><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></a>
      <a class="card-link"><%= link_to 'Add an answer', question_path(question.id)%></a>
    </div>
  </div>
<% end %>
<br>


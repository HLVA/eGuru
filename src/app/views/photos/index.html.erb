<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Link</th>
      <th>Avatar</th>
      <th>User</th>
      <th>Question</th>
      <th>Experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.content %></td>
        <td><%= photo.link %></td>
        <td><%= photo.avatar %></td>
        <td><%= photo.user_id %></td>
        <td><%= photo.question_id %></td>
        <td><%= photo.experience_id %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>

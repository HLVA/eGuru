<p id="notice"><%= notice %></p>

<h1>Experiences</h1>
<div class="row">
<div class="col-md-3 to_the_right">
    <%= form_tag(experiences_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search experience" %>
            <%= submit_tag "Search" %>
            <% end %>
          </div>

<%= link_to 'New Experience', new_experience_path %>
</div>
<% @experiences.each do |experience| %>
  <div class="card">
    <div class="card-block">
      <%= link_to experience.title, experience_path(experience.id), class: 'card-title' %>
      <h6 class="card-subtitle text-muted">Support card subtitle</h6>
    </div>
    <% experience.photos.each do |photo| %>
      <img src= "<%= photo.avatar %>" >  
    <% end %>
    
    <div class="card-block">
      <p class="card-text"><%= experience.content %></p>
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    </div>
  </div>
<% end %>
<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-3 to_the_right">
    <%= form_tag(experiences_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search experience" %>
            <%= submit_tag "Search" %>
            <% end %>
          </div>


<%= link_to 'New Experience', new_experience_path %>
</div>
<% @experiences.each do |experience| %>
  <div class="card">
    <div class="card-block">
      <%= link_to experience.title, experience_path(experience.id), class: 'card-title lead' %>
      <div class="card-subtitle text-muted small">Posted at: <%= experience.created_at %></div>
    </div>    
    
    <div class="card-block">
      <div class="card-text"><%= experience.content %></div>
      <% experience.photos.each do |photo| %>
      
        <img src= "<%= photo.avatar %>" class="experience-image">  
      <% end %>
    </div>
  </div>
<% end %>